<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  </head>

  <body>
    <script src="/models/problem-model.js"></script>
    <h1>{{ title }} </h1>
    <!-- <h2> {Create an addition function that returns the sum of the two arguments}</h2> -->
    <h3>{{description}}</h3>
    <p>Problem #{{number}}</p>

        <form action = 'parser.js' method='post' id='solutionform'>
          <fieldset>
            <legend>Workspace</legend>
            <p>
            <label>Function Name</label>
              <input class="form-control"
                     cols = "40"
                     name= 'funcName'
                     value = '{{name}}'>
              <label>Test args</label>
              <input class="form-control"
                     cols = "40"
                     type = "text"
                     id = "testArgs"
                     placeholder = "Insert test arguments, seperated by commas"/>
            </p>
              <!-- <p>var {{name}} = function(a,b){</p> -->
              <!-- <label>function name</label> -->
              <textarea class="form-control" id = "myTextArea"
                      rows = "15"
                      cols = "100"
                      name = "answer">var {{name}} = function (PARAMS){  BODY  }</textarea>

            </p>
            <div class="btn-toolbar" role="toolbar">
            <input class="btn btn-primary" type="submit" value="Submit Answer" id='subans'>
            <input class="btn btn-default" type="submit" value="Run function">
            </div>
            <p>Test Result: {{result}}<p>
          </fieldset>
        </form>

<!-- BootStrap 3 alerts-->
    <div class="alert alert-success alert-dismissible problem-success" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong>Success!</strong> You passed all the tests! Congratulations!
    </div>

    <div class="alert alert-warning alert-dismissible problem-failure" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong>Incomplete!</strong> Some functions were incorrect! Try again!
    </div>

    <div class="alert alert-danger alert-dismissible problem-error" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong>Warning!</strong> Syntax/parser error! Check your function.</div>
<!-- BootStrap 3 alerts-->


      <script src="/models/problem-model.js"></script>
      <script> $('.alert-dismissible').hide(); </script>

      </body>
    </html>
    <p>
  </body>
</html>
